      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, 1fr);
      gap: 30px;
      width: 500px;
      height: 500px;
    }

    .elemento {
      align-items: center;
      padding: 10px;
      transition: all 0.3s ease;
      transform: scale(1.02);
    }

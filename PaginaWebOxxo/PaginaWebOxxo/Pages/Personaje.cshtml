@page
@model PersonajeModel
@{
    ViewData["Title"] = "Personalización y Canje";
}

<body>
    <div>
        <!-- Botón de ayuda arriba-->
        <button class="botonayuda" title="Para saber más de Oxxo clickea aquí" onclick="window.open('https://www.oxxo.com/','_blank')"><i class="fa-solid fa-question"></i></button>
    </div>
    <div class="layout-principal">
    <!-- Columna izquierda -->
    <div class="columna-izquierda">
        <h1 class="color_letras cal-sans-regular">@ViewData["Title"]</h1><br>
        <div class="d-flex contenedor2">
            <img src="@Model.Lider.fotoPerfil" alt="Foto de Trabajador" class="rounded-circle me-3" width="150" height="150">
            <div>
                <h3 class="fs-2 cal-sans-regular">@Model.Lider.Nombre @Model.Lider.ApellidoP</h3>
                <p class="fs-3 text-muted">@Model.Lider.Puesto</p>
            </div>
            </figure>
        </div>
        <br>
        <br>
        <h3>Elegir Personaje</h3>
        <div class="contenedor">
          <form method="post" asp-page-handler="EquiparPersonaje" class="elemento">
              <input type="hidden" name="personaje" value="JEFE" />
              <button type="submit" class=" @(Model.PersonajeSeleccionado == "JEFE" ? "seleccionado" : "")">
                  <div style="display: flex; flex-direction: column; align-items: center;">
                      <img src="imagenes/Personaje3PW.png" alt="">
                      <p style="font-size:25px">JEFE</p>
                  </div>
              </button>
          </form>
          <form method="post" asp-page-handler="EquiparPersonaje" class="elemento">
              <input type="hidden" name="personaje" value="ALEX" />
              <button type="submit" class="@(Model.PersonajeSeleccionado == "ALEX" ? "seleccionado" : "")">
                  <div style="display: flex; flex-direction: column; align-items: center;">
                      <img src="imagenes/Personaje2PW.png" alt="">
                      <p style="font-size:25px">ALEX</p>
                  </div>
              </button>
          </form>
          <form method="post" asp-page-handler="EquiparPersonaje" class=" elemento">
              <input type="hidden" name="personaje" value="ADAM" />
              <button type="submit" class="@(Model.PersonajeSeleccionado == "ADAM" ? "seleccionado" : "")">
                  <div style="display: flex; flex-direction: column; align-items: center;">
                      <img src="imagenes/Personaje4PW.png" alt="">
                      <p style="font-size:25px">ADAM</p>
                  </div>
              </button>
          </form>
          <form method="post" asp-page-handler="EquiparPersonaje" class="elemento">
              <input type="hidden" name="personaje" value="AMELIA" />
              <button type="submit" class="@(Model.PersonajeSeleccionado == "AMELIA" ? "seleccionado" : "")">
                  <div style="display: flex; flex-direction: column; align-items: center;">
                      <img src="imagenes/Personaje1PW.png" alt="">
                      <p style="font-size:25px">AMELIA</p>
                  </div>
              </button>
          </form>
        </div>
    </div>

    <!-- Columna derecha -->
    <div class="columna-derecha">
        <div>
        <h3>Elegir Música del Menú</h3>
          <div class="contenedor3">
              <form method="post" asp-page-handler="EquiparTrack" class="elemento">
                  <input type="hidden" name="track" value="TRACK1" />
                  <button type="submit" class="@(Model.TrackSeleccionado == "TRACK1" ? "seleccionado" : "")">
                      <div style="display: flex; flex-direction: column; align-items: center;">
                          <img src="imagenes/Cancion.png" alt="" class="imagenes-musica">
                          <p style="font-size: 20px;">Pista 1</p>
                      </div>
                  </button>
              </form>
                <form method="post" asp-page-handler="EquiparTrack" class="elemento">
                    <input type="hidden" name="track" value="TRACK2" />
                    <button type="submit" class="@(Model.TrackSeleccionado == "TRACK2" ? "seleccionado" : "")">
                        <div style="display: flex; flex-direction: column; align-items: center;">
                            <img src="imagenes/Cancion.png" alt="" class="imagenes-musica">
                            <p style="font-size: 20px;">Pista 2</p>
                        </div>
                    </button>
                </form>
                <form method="post" asp-page-handler="EquiparTrack" class="elemento">
                    <input type="hidden" name="track" value="TRACK3" />
                    <button type="submit" class="@(Model.TrackSeleccionado == "TRACK3" ? "seleccionado" : "")">
                        <div style="display: flex; flex-direction: column; align-items: center;">
                            <img src="imagenes/Cancion.png" alt="" class="imagenes-musica">
                            <p style="font-size: 20px;">Pista 3</p>
                        </div>
                    </button>
                </form>
          </div>
        </div>

        <br>
        <br>
        <br>
        <br>

        <div>
        <h3>Recompensas</h3>
        <ul>
            <li><a class="links" href="CanjeRecompensas">Tiempo Aire</a></li>
            <li><a class="links" href="CanjeRecompensas">Puntos Spin</a></li>
            <li><a class="links" href="CanjeRecompensas">Cupones</a></li>
        </ul>
        </div>
    </div>
</div>

<div class="modal fade" id="empleadoModal" tabindex="-1" aria-labelledby="empleadoModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="empleadoModalLabel">¡Cambio éxitoso!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll('form[action*="EquiparPersonaje"]').forEach(form => {
        form.addEventListener('submit', function (e) {
            e.preventDefault();
            const modal = new bootstrap.Modal(document.getElementById('empleadoModal'));
            modal.show();
            setTimeout(() => {
                form.submit();
            }, 2000);
        });
    });
    document.querySelectorAll('form[action*="EquiparTrack"]').forEach(form => {
        form.addEventListener('submit', function (e) {
            e.preventDefault();
            const modal = new bootstrap.Modal(document.getElementById('empleadoModal'));
            modal.show();
            setTimeout(() => {
                form.submit();
            }, 2000);
        });
    });
});

</script>

</body>

<style>
    /* Estilos para el contenedor de personajes */
    .contenedor {
      display: grid;
      grid-template-columns: repeat(2, 1fr); /* Crea dos columnas iguales */
      grid-template-rows: repeat(2, 1fr); /* Crea dos filas iguales */
      gap: 30px; /* Agrega espacio entre las celdas de la cuadrícula */
      width: 500px; /* Define el ancho del contenedor */
      height: 500px;
    }

    .elemento {
      align-items: center;
      padding: 10px; /* Agrega padding para ver mejor los elementos */
      transition: all 0.3s ease;
      transform: scale(1.02);
    }
    .elemento:hover {
      transform: scale(1.05);
    }

    .contenedor2 {
      display: grid;
      grid-template-columns: repeat(2, 1fr); /* Crea dos columnas iguales */
      gap: 30px; /* Agrega espacio entre las celdas de la cuadrícula */
      width: 500px; /* Define el ancho del contenedor */
      height: 200px;
    }


    .layout-principal {
      display: flex;
      gap: 40px;
      padding: 20px;
    }

    .columna-izquierda {
      flex: 1; /* Que ocupe solo lo que necesita */
    }

    .columna-derecha {
      flex: 1; /* Que ocupe el resto del ancho disponible */
      padding: 50px;
    }

    .botonayuda {
      position: fixed;
      top: 20px;
      right: 20px;
      background-color: #f1f1f1;
      border: none;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      font-size: 20px;
      font-weight: bold;
      color: #333;
      cursor: pointer;
      z-index: 999;
    }

    .botonayuda:hover {
    background-color: #e0e0e0;
    }

    button {
      border: none; /* Quitar el borde */
      background: transparent; /* Fondo transparente */
      padding: 0; /* Quitar el relleno */
      font-family: inherit; /* Heredar la fuente del documento */
      font-size: inherit; /* Heredar el tamaño de fuente */
      color: inherit; /* Heredar el color del texto */
      cursor: pointer; /* Cambiar el cursor al pasar por encima (opcional) */
    }

    .seleccionado {
      background: #f28c8c;
      border-radius: 12px;
      transition: all 0.3s ease;
      transform: scale(1.02);
    }

    .seleccionado:hover {
      transform: scale(1.05);
    }



    .contenedor3 {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr; /* Opcional: tres columnas de igual tamaño */
    }
    .columna {
      /* Estilos para cada columna */
    }
    .imagenes-musica {
      width: 100px; /* Ajusta el tamaño de las imágenes según sea necesario */
      height: 100px;
    }
    .links {
      text-decoration: none; /* Quitar subrayado */
      color: #000000; /* Color del enlace */
      font-size: 25px; /* Tamaño de fuente */
    }
    .links:hover {
      color: #fc0000; /* Cambiar color al pasar el mouse */
    }
</style>
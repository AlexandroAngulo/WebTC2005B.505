@page
@model InicioModel
@{
    ViewData["Title"] = "Estadísticas del Líder de Tienda";
}
<body class="container-fluid px-5">
    <h1 class="color_letras cal-sans-regular">@ViewData["Title"]</h1>

    <!-- Perfil del usuario -->
    <div class="d-flex align-items-center">
        <img src="@Model.Usuario.fotoPerfil" alt="Foto de Trabajador" class="rounded-circle me-3" width="150" height="150">
        <div>
            <h3 class="fs-2 cal-sans-regular">@Model.Usuario.Nombre @Model.Usuario.ApellidoP</h3>
            <p class="fs-3 text-muted">@Model.Usuario.Puesto</p>
        </div>
    </div>

    <br />
    <h3>Estadísticas</h3>

    <!-- Contenedor de estadísticas principales -->
    <div class="container-fluid my-4">
        <div class="row gx-4 gy-4 align-items-start">
            <!-- Imagen 1: Estadísticas izquierda -->
            <div class="col-12 col-md-5 text-center">
                <iframe width="600" height="450" src="https://lookerstudio.google.com/embed/reporting/1a1e02b5-9f99-4204-951b-8bdfee94ab61/page/7vRMF" frameborder="0" style="border:0" allowfullscreen sandbox="allow-storage-access-by-user-activation allow-scripts allow-same-origin allow-popups allow-popups-to-escape-sandbox"></iframe>
            </div>

            <!-- Imagen 2: Tabla o gráfico al lado derecho -->
            <div class="col-12 col-md-7 text-center">
                <img src="URL_DE_TU_GRAFICA_DERECHA" alt="Tabla de estadísticas" class="img-fluid rounded shadow" />
            </div>
        </div>

        <!-- Puntos, Estrellas y Monedas -->
        <div class="row mt-5 justify-content-center text-center">
            <div class="col-12 col-md-4 d-flex justify-content-center align-items-center mb-3 mb-md-0">
                <i class="fa-solid fa-star text-warning fa-4x me-2"></i>
                <span class="fs-3">x @Model.TotalEstrellas</span>
            </div>
            <div class="col-12 col-md-4 d-flex justify-content-center align-items-center">
                <i class="fa-solid fa-coins text-warning fa-4x me-2"></i>
                <span class="fs-3">x @Model.EstadisticasUsuario.Monedas</span>
            </div>
        </div>
    </div>
</body>

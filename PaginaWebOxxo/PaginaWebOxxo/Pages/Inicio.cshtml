@page
@model InicioModel
@{
    ViewData["Title"] = "Estadísticas del Líder de Tienda";
}
<body class="container-fluid px-5">
    <h1 class="color_letras cal-sans-regular">@ViewData["Title"]</h1>
    <div class="d-flex align-items-center">
        <img src="@Model.Usuario.fotoPerfil" alt="Foto de Trabajador" class="rounded-circle me-3" width="150" height="150">
        <div>
                <h3 class="fs-2 cal-sans-regular">@Model.Usuario.Nombre @Model.Usuario.ApellidoP</h3>
                <p class="fs-3 text-muted">@Model.Usuario.Puesto</p>
            </div>
    </div>
    <br />
    <h3>Estadísticas</h3>
    <div class="container-fluid my-4">
        <div class="row align-items-center gx-5">
            
            <!-- Imagen de estadísticas -->
            <div class="col-12 col-md-5 text-center mb-3 mb-md-0">
                <img src="https://images.ctfassets.net/w6r2i5d8q73s/3xqYOKQFkVwwqrlOztcg7Y/ce254af6cde821a7b08bfbb44bb60003/grafico_de_barras_ventas.png?fm=webp&q=75" alt="Estadísticas" class="img-fluid" />
            </div>
            
            <!-- Detalles de puntos, estrella y monedas -->
            <div class="col-12 col-md-7">
                <h4 class="mb-3">Puntos</h4>
                
                <!-- Estrella -->
                <div class="d-flex align-items-center mb-2">
                    <i class="fa-solid fa-star text-warning me-2 fa-6x"></i>
                    <p class="mb-0 fs-3">x @Model.TotalEstrellas</p>
                </div>
                
                <!-- Monedas -->
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-coins text-warning me-2 fa-6x"></i>
                    <p class="mb-0 fs-3">x @Model.EstadisticasUsuario.Monedas</p>
                </div>
            </div>
        </div>
    </div>
</body>
